{
    "manifest_version": 2,
    "name": "Anti Phishing P.Singh",
    "version": "1.5.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "anti-phishing-singh"
        }
    },
    "background": {
        "persistent": true,
        "scripts": ["background.ts"]
    },
    "content_scripts": [
        {
            "js": ["content.ts"],
            "matches": ["<all_urls>"],
            "match_about_blank": false
        }
    ],

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "notifications",
        "alarms",
        "tabs",
        "activeTab",
        "storage",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": {
            "16": "assets/iconr.png"
        }
    },
    "icons": {
        "16": "assets/iconr.png"
    }
}
